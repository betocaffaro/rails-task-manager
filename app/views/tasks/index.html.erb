<h1>My Tasks</h1>
<div class="container d-flex justify-content-start">
  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex justify-content-between align-items-center"><%= link_to task.title, task_path(task) %>
      <%= link_to task_path(task.id), method: :delete, data: {confirm: 'Are you sure?'} do %>
      <i class="fas fa-trash" aria-hidden="true"></i>
      <% end %>
      </li>
    <% end %>
  </ul>
</div>
<p><%= link_to '+ add another task', new_task_path %></p>
